# Top-most EditorConfig file
root = true

# Disable ReSharper 'Convert to primary constructor' inspection globally
resharper_convert_to_primary_constructor_highlighting = none
# Disable ReSharper 'Loop can be converted into LINQ-expression' inspection for C# files
resharper_loop_can_be_converted_to_query_highlighting = none

# Disable Rider/ReSharper LINQ conversion suggestions
resharper_csharp_style_convert_to_linq_highlighting = none
resharper_csharp_style_convert_to_linq_use_var = false

# Disable .NET analyzers LINQ conversion suggestions
dotnet_style_prefer_foreach = false
dotnet_style_prefer_linq = false

# Disable IDE suggestions for LINQ conversion
dotnet_style_qualification_for_field = false
dotnet_style_qualification_for_property = false
dotnet_style_qualification_for_method = false
dotnet_style_qualification_for_event = false

# Disable specific LINQ-related suggestions
dotnet_style_prefer_simplified_boolean_expressions = false
dotnet_style_prefer_simplified_interpolation = false

# Disable SQL data source configuration warnings
resharper_sql_no_data_sources_configured_highlighting = none
resharper_sql_no_data_sources_configured_for_advanced_code_assistance_highlighting = none
resharper_sql_no_data_sources_configured_for_code_assistance_highlighting = none

# Don't use tabs for indentation.
[*]
indent_style = space
# (Please don't specify an indent_size here; that has too many unintended consequences.)

# Code files
[*.{cs,csx,vb,vbx,cake}]
charset = utf-8
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# XML project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
charset = utf-8
indent_size = 2

# XML config files
[*.{xml,props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
charset = utf-8
indent_size = 2

# JSON files
[*.json]
charset = utf-8
indent_size = 2

# Powershell files
[*.ps1]
indent_size = 2

# Batch Files
[*.{cmd,bat}]
end_of_line = crlf

# Shell script files
[*.sh]
end_of_line = lf
indent_size = 2 